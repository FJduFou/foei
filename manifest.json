{
  "name": "FoEI",
  "version": "0.0.1",
  "description": "Forge of Emipires Inspector",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": [
      "background/consts.js",
      "background/utils.js",
      "background/main.js",
      "background/battle_field.js",
      "background/city_map.js",
      "background/great_building.js",
      "background/other_player.js",
      "background/rewards.js",
      "background/startup.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": ["https://*.forgeofempires.com/game/*"]
  },
  "content_scripts": [{
    "matches": ["https://*.forgeofempires.com/game/*"],
    "js": ["inject.js"]
  }],
  "content_security_policy": "script-src 'self' https://code.jquery.com/ https://cdnjs.cloudflare.com/ajax/libs/popper.js/ https://stackpath.bootstrapcdn.com/; object-src 'self'",
  "web_accessible_resources": ["ajax_inspect.js"],
  "options_page": "options.html",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}
